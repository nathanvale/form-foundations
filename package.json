{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn clean:all && yarn --ignore-engines && lerna bootstrap -- --ignore-engines && yarn build",
    "prebuild": "yarn clean && yarn clean:dist",
    "build": "cross-env NODE_ENV=production yarn tsc && rollup -c",
    "clean": "rm -rf  coverage packages/*/npm-debug*",
    "clean:all": "rm -rf  node_modules package-lock.json && yarn clean:packages:all && yarn clean",
    "clean:dist": "rm -rf  packages/*/dist",
    "clean:packages:all": "rm -rf  packages/*/node_modules packages/*/dist packages/*/package-lock.json",
    "clean:packages:dist": "rm -rf  packages/*/dist",
    "precommit": "lint-staged",
    "format": "prettier --write  \"**/*.{ts,tsx,json,md}\" ",
    "lint": "eslint --fix --cache --ignore-path .gitignore --ext .tsx,.ts,.js ./packages/*/src *.js",
    "start": "cross-env NODE_ENV=development rollup -w -c | tsc -b -w",
    "storybook": "start-storybook -p 9001",
    "test": "jest --changedSince master --roots '<rootDir>' --silent --detectOpenHandles --forceExit",
    "test:all": "jest --notify --silent --coverage",
    "test:watch": "yarn test --watch --silent=false --collectCoverage=false",
    "tsc": "tsc -b",
    "tsc:watch": "yarn tsc -w"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@storybook/addon-options": "^4.0.12",
    "@storybook/react": "^4.0.12",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.12",
    "@types/react": "^16.3.0",
    "@types/react-dom": "^16.0.9",
    "@types/recompose": "^0.30.2",
    "@types/storybook__react": "^4.0.0",
    "@types/warning": "^3.0.0",
    "@types/yup": "^0.26.3",
    "all-contributors-cli": "^4.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-styled-components": "^1.9.4",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "fork-ts-checker-webpack-plugin": "^0.5.1",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "raw-loader": "^1.0.0",
    "react": "^16.3.0",
    "react-dev-utils": "^6.1.1",
    "react-dom": "^16.3.0",
    "react-testing-library": "^5.3.2",
    "rollup": "^0.66.4",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-size-snapshot": "^0.7.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^6.0.0",
    "rollup-plugin-uglify-es": "^0.0.1",
    "styled-components": "^3.4.5",
    "tsc-watch": "^1.0.31",
    "typescript": "3.1.1",
    "typescript-eslint-parser": "^21.0.2",
    "uglify-es": "^3.3.9"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js}": [
      "yarn lint",
      "prettier --write",
      "git add"
    ]
  }
}