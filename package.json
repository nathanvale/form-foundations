{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "node ./scripts/bootstrap.js",
    "storybook": "start-storybook -p 9001",
    "test": "jest --changedSince master --roots '<rootDir>' --silent --detectOpenHandles --forceExit",
