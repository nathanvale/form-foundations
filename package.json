    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "@types/react": "^16.3.0",
    "babel-core": "^7.0.0-bridge",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "chalk": "^1.1.3",
    "console.table": "^0.10.0",
    "dotenv": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^0.5.1",
    "install": "^0.12.2",
    "jest": "^23.6.0",
    "jest-diff": "^23.6.0",
    "jest-styled-components": "^6.3.1",
    "jscodeshift": "^0.6.2",
